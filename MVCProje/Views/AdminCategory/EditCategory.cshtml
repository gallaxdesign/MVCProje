@model EntityLayer.Concrete.Category
@{
    ViewBag.Title = "EditCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Edit Category</h2>
@using (Html.BeginForm("EditCategory", "AdminCategory", FormMethod.Post))
{
<div class="form-group">
    @Html.Label("Kategori ID")
    @Html.TextBoxFor(x => x.CategoryID)
    <br />
    @Html.Label("Kategori Adı")
    @Html.TextBoxFor(x => x.CategoryName)
    <br />
    @Html.Label("Kategori Açıklama")
    @Html.TextAreaFor(x => x.CategoryDescription)
    <br />
    <button class="btn btn-success">Güncelle</button>
</div>
}

