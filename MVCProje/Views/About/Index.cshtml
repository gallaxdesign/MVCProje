@using EntityLayer.Concrete
@model List<About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Hakkımızda</h2>

<br />
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Hakkımda</th>

        <th>Aktif</th>
        <th>Pasif</th>

    </tr>
    @foreach (var item in Model)
    {
<tr>
    <th>@item.AboutID</th>
    <td>@item.AboutDetails1</td>
    @if (item.AboutStatus == true)
    {
        <td><a href="#" class="btn btn-dark">Aktif</a></td>
        <td><a href="/About/StatusChange/@item.AboutID" class="btn btn-danger">Pasif Yap</a></td>
    }
    else
    {
        <td><a href="/About/StatusChange/@item.AboutID" class="btn btn-success">Aktif Yap</a></td>
        <td><a href="#" class="btn btn-dark">Pasif</a></td>
    }



</tr>
    }

</table>



@Html.Action("AboutPartial","About")

